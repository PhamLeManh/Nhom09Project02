@model MdpProject.Models.MdpProductVariant

@{
    ViewData["Title"] = "Thêm Variant";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-primary fw-bold mb-3">
            <i class="bi bi-plus-circle"></i> @ViewData["Title"]
        </h2>
        <hr class="mb-4" />

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="MdpSanPhamId" class="form-label">Sản phẩm</label>
                    <select asp-for="MdpSanPhamId" class="form-select" asp-items="@(ViewData["MdpSanPhamId"] as SelectList)"></select>
                    <span asp-validation-for="MdpSanPhamId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpMauSacId" class="form-label">Màu sắc</label>
                    <select asp-for="MdpMauSacId" class="form-select" asp-items="@(ViewData["MdpMauSacId"] as SelectList)"></select>
                    <span asp-validation-for="MdpMauSacId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpDungLuong" class="form-label">Dung lượng</label>
                    <input asp-for="MdpDungLuong" class="form-control" placeholder="Nhập dung lượng..." />
                    <span asp-validation-for="MdpDungLuong" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpGia" class="form-label">Giá</label>
                    <input asp-for="MdpGia" class="form-control" placeholder="Nhập giá..." />
                    <span asp-validation-for="MdpGia" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpAnh" class="form-label">Ảnh</label>
                    <input asp-for="MdpAnh" class="form-control" placeholder="URL ảnh..." />
                    <span asp-validation-for="MdpAnh" class="text-danger small"></span>

                    @* Preview ảnh nếu có *@
                    @if (!string.IsNullOrEmpty(Model?.MdpAnh))
                    {
                        <div class="mt-2">
                            <img src="@Model.MdpAnh" alt="Ảnh variant" style="max-width:120px; border-radius:8px; border:1px solid #ddd;" />
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-primary px-4 flex-fill fw-semibold">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="MdpAdminIndex" class="btn btn-outline-secondary px-4 flex-fill fw-semibold">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }
</style>
