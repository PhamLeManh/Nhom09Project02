@model MdpProject.Models.MdpLaptop

@{
    ViewData["Title"] = "Delete Laptop";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4 text-danger"><i class="bi bi-trash"></i> Xóa Laptop</h2>

    <div class="card shadow-sm p-4">
        <h4 class="mb-3">Bạn có chắc muốn xóa laptop này không?</h4>

        <div class="row mb-3">
            <div class="col-md-4 text-center">
                <img src="@Model.MdpAnh" class="img-fluid rounded mb-2" style="max-height:200px;" alt="Laptop image" />
            </div>
            <div class="col-md-8">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Tên Laptop</dt>
                    <dd class="col-sm-8">@Model.MdpTenLaptop</dd>

                    <dt class="col-sm-4">CPU</dt>
                    <dd class="col-sm-8">@Model.MdpCpu</dd>

                    <dt class="col-sm-4">RAM</dt>
                    <dd class="col-sm-8">@Model.MdpRam</dd>

                    <dt class="col-sm-4">Storage</dt>
                    <dd class="col-sm-8">@Model.MdpStorage</dd>

                    <dt class="col-sm-4">GPU</dt>
                    <dd class="col-sm-8">@Model.MdpGpu</dd>

                    <dt class="col-sm-4">Màn hình</dt>
                    <dd class="col-sm-8">@Model.MdpManHinh</dd>

                    <dt class="col-sm-4">Pin</dt>
                    <dd class="col-sm-8">@Model.MdpPin</dd>

                    <dt class="col-sm-4">Hệ điều hành</dt>
                    <dd class="col-sm-8">@Model.MdpHeDieuHanh</dd>

                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Model.MdpCreatedAt?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Ngày cập nhật</dt>
                    <dd class="col-sm-8">@Model.MdpUpdatedAt?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Mã sản phẩm cha</dt>
                    <dd class="col-sm-8">@Model.MdpSanPham.MdpSanPhamId</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MdpLaptopId" />
            <div class="d-flex gap-2">
                <input type="submit" value="Xóa" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<style>
    .shadow-sm {
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    dt {
        font-weight: 600;
        color: #333;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    img {
        border-radius: 8px;
    }

    .btn-lg {
        min-width: 120px;
    }
</style>
