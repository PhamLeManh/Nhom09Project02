@model MdpProject.Models.MdpLaptop
@{
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-laptop"></i> Thêm Laptop mới</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <!-- Thông báo -->
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Success"])))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Error"])))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Error"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="MdpSanPhamId" class="form-label">Danh mục sản phẩm</label>
                    <select asp-for="MdpSanPhamId" class="form-select" asp-items="@(ViewData["MdpSanPhamId"] as SelectList)">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="MdpSanPhamId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpTenLaptop" class="form-label">Tên Laptop</label>
                    <input asp-for="MdpTenLaptop" class="form-control" />
                    <span asp-validation-for="MdpTenLaptop" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="MdpCpu" class="form-label">CPU</label>
                    <input asp-for="MdpCpu" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MdpRam" class="form-label">RAM</label>
                    <input asp-for="MdpRam" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MdpStorage" class="form-label">Storage</label>
                    <input asp-for="MdpStorage" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label asp-for="MdpGpu" class="form-label">GPU</label>
                    <input asp-for="MdpGpu" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MdpManHinh" class="form-label">Màn hình</label>
                    <input asp-for="MdpManHinh" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="MdpPin" class="form-label">Pin</label>
                    <input asp-for="MdpPin" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpHeDieuHanh" class="form-label">Hệ điều hành</label>
                    <input asp-for="MdpHeDieuHanh" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="MdpAnh" class="form-label">URL ảnh</label>
                    <input asp-for="MdpAnh" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="MdpAnh" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Thêm Laptop</button>
                <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
