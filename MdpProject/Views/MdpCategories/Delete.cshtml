@model MdpProject.Models.MdpCategory

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <!-- Banner -->
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-trash3 display-4 text-danger me-2"></i>
        <h2 class="fw-bold text-danger">Xóa danh mục</h2>
    </div>

    <div class="card shadow-sm border-0 p-4">
        <h5 class="text-warning mb-3">⚠️ Bạn có chắc chắn muốn xóa danh mục này?</h5>

        <!-- Thông tin danh mục -->
        <dl class="row mb-4">
            <dt class="col-sm-3 fw-semibold">Tên danh mục:</dt>
            <dd class="col-sm-9">@Model.MdpTenDanhMuc</dd>

            <dt class="col-sm-3 fw-semibold">Mô tả:</dt>
            <dd class="col-sm-9">@Model.MdpMoTa</dd>

            <dt class="col-sm-3 fw-semibold">Ảnh danh mục:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.MdpAnhDanhMuc))
                {
                    <img src="@Model.MdpAnhDanhMuc" alt="Ảnh danh mục" style="max-width:200px; border-radius:6px;" />
                }
                else
                {
                    <span class="text-muted">Chưa có ảnh</span>
                }
            </dd>

            <dt class="col-sm-3 fw-semibold">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.MdpCreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <!-- Form xóa -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MdpCategoryId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3 me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }
</style>
