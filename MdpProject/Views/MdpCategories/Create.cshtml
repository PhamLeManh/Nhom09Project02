@model MdpProject.Models.MdpCategory

@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <!-- Banner -->
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-folder-plus-fill display-4 text-success me-2"></i>
        <h2 class="fw-bold text-success">Thêm danh mục mới</h2>
    </div>

    <!-- Form -->
    <div class="card shadow-sm border-0 p-4">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="validationSummary"></div>

            <div class="col-md-6">
                <label asp-for="MdpTenDanhMuc" class="form-label fw-semibold"></label>
                <input asp-for="MdpTenDanhMuc" class="form-control" placeholder="Nhập tên danh mục" />
                <span asp-validation-for="MdpTenDanhMuc" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="MdpMoTa" class="form-label fw-semibold"></label>
                <input asp-for="MdpMoTa" class="form-control" placeholder="Nhập mô tả" />
                <span asp-validation-for="MdpMoTa" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="MdpAnhDanhMuc" class="form-label fw-semibold"></label>
                <input asp-for="MdpAnhDanhMuc" class="form-control" placeholder="URL ảnh danh mục" />
                <span asp-validation-for="MdpAnhDanhMuc" class="text-danger"></span>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check-circle me-2"></i> Thêm danh mục
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                    <i class="bi bi-arrow-left-circle me-2"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Card shadow */
    .card {
        border-radius: 12px;
    }

    /* Input focus */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    /* Button icon spacing */
    .btn i {
        vertical-align: middle;
    }
</style>
