@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Thống kê doanh thu sản phẩm";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-bar-chart-line"></i> Thống kê doanh thu theo sản phẩm</h4>
            <form method="get" class="d-flex gap-2">
                <select name="year" class="form-select form-select-sm w-auto">
                    <option value="">-- Năm --</option>
                    @if (ViewBag.Years != null)
                    {
                        foreach (var y in (List<int>)ViewBag.Years)
                        {
                            if (y == (ViewBag.SelectedYear ?? 0))
                            {
                                @:
                                <option value="@y" selected>@y</option>
                            }
                            else
                            {
                                @:
                                <option value="@y">@y</option>
                            }
                        }
                    }
                </select>

                <select name="month" class="form-select form-select-sm w-auto">
                    <option value="">-- Tháng --</option>
                    @if (ViewBag.Months != null)
                    {
                        foreach (var m in (List<int>)ViewBag.Months)
                        {
                            if (m == (ViewBag.SelectedMonth ?? 0))
                            {
                                @:
                                <option value="@m" selected>Tháng @m</option>
                            }
                            else
                            {
                                @:
                                <option value="@m">Tháng @m</option>
                            }
                        }
                    }
                </select>

                <button type="submit" class="btn btn-light btn-sm">Lọc</button>
            </form>
        </div>

        <div class="card-body">
            <h5 class="text-end text-success mb-3">
                Tổng doanh thu: @ViewBag.TongDoanhThu.ToString("N0") đ
            </h5>

            <!-- Bảng thống kê -->
            <div class="table-responsive">
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>#</th>
                            <th>Sản phẩm</th>
                            <th>Tổng số lượng bán</th>
                            <th>Tổng doanh thu (VNĐ)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i++</td>
                                    <td>@item.SanPham</td>
                                    <td>@item.TongSoLuong</td>
                                    <td>@item.TongDoanhThu.ToString("N0")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <h3 class="mb-4"><i class="bi bi-speedometer2"></i> Tổng Thống Kê Doanh Thu</h3>

            <div class="row mb-4">
                <!-- Users -->
                <div class="col-md-3">
                    <div class="card text-white bg-primary bg-gradient shadow-sm mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Users</h6>
                                <p class="display-6 fw-bold">12</p>
                            </div>
                            <i class="bi bi-people-fill display-5 opacity-50"></i>
                        </div>
                    </div>
                </div>
                <!-- Orders -->
                <div class="col-md-3">
                    <div class="card text-white bg-success bg-gradient shadow-sm mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Orders</h6>
                                <p class="display-6 fw-bold">12</p>
                            </div>
                            <i class="bi bi-basket-fill display-5 opacity-50"></i>
                        </div>
                    </div>
                </div>
                <!-- Revenue -->
                <div class="col-md-3">
                    <div class="card text-white bg-warning bg-gradient shadow-sm mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Revenue</h6>
                                <p class="display-6 fw-bold">$14,800</p>
                            </div>
                            <i class="bi bi-cash-stack display-5 opacity-50"></i>
                        </div>
                    </div>
                </div>
                <!-- Products -->
                <div class="col-md-3">
                    <div class="card text-white bg-danger bg-gradient shadow-sm mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Products</h6>
                                <p class="display-6 fw-bold">26</p>
                            </div>
                            <i class="bi bi-box-seam-fill display-5 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Biểu đồ -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light fw-bold"><i class="bi bi-graph-up"></i> Doanh Thu Theo Tháng</div>
                        <div class="card-body">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light fw-bold"><i class="bi bi-people"></i> Users Theo Role</div>
                        <div class="card-body">
                            <canvas id="usersChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            @section Scripts {
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script>
                    // Biểu đồ doanh thu
                    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
                    new Chart(revenueCtx, {
                        type: 'line',
                        data: {
                            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                            datasets: [{
                                label: 'Doanh Thu ($)',
                                data: [1200, 1500, 1800, 2200, 2000, 2500],
                                borderColor: '#0d6efd',
                                backgroundColor: 'rgba(13, 110, 253, 0.2)',
                                fill: true,
                                tension: 0.3,
                                borderWidth: 3,
                                pointBackgroundColor: '#0d6efd',
                                pointRadius: 5
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: true, position: 'bottom' }
                            }
                        }
                    });

                    // Biểu đồ người dùng
                    const usersCtx = document.getElementById('usersChart').getContext('2d');
                    new Chart(usersCtx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Admin', 'Manager', 'Customer'],
                            datasets: [{
                                label: 'Users',
                                data: [3, 1, 9],
                                backgroundColor: [
                                    'rgba(220, 53, 69, 0.7)',
                                    'rgba(13, 110, 253, 0.7)',
                                    'rgba(255, 193, 7, 0.7)'
                                ],
                                borderColor: [
                                    'rgba(220, 53, 69, 1)',
                                    'rgba(13, 110, 253, 1)',
                                    'rgba(255, 193, 7, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { position: 'bottom' }
                            }
                        }
                    });
                </script>
            }
