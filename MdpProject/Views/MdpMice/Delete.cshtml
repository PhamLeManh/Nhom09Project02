@model MdpProject.Models.MdpMouse

@{
    ViewData["Title"] = "Xóa Mouse";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-danger fw-bold mb-3">
            <i class="bi bi-trash"></i> Xóa Mouse
        </h2>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Tên Mouse</dt>
            <dd class="col-sm-9">@Model.MdpTenMouse</dd>

            <dt class="col-sm-3">Kiểu kết nối</dt>
            <dd class="col-sm-9">@Model.MdpKieuKetNoi</dd>

            <dt class="col-sm-3">Độ phân giải</dt>
            <dd class="col-sm-9">@Model.MdpDoPhanGiai</dd>

            <dt class="col-sm-3">Số nút</dt>
            <dd class="col-sm-9">@Model.MdpSoNut</dd>

            <dt class="col-sm-3">Đèn LED</dt>
            <dd class="col-sm-9">@((Model.MdpDenLed == true) ? "Có" : "Không")</dd>

            <dt class="col-sm-3">Danh mục</dt>
            <dd class="col-sm-9">@Model.MdpSanPham?.MdpTenSanPham</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MdpMouseId" />
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash"></i> Xóa
            </button>
            <a asp-action="MdpAdminIndex" class="btn btn-outline-secondary px-4">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </form>

    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        padding: 20px;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 10px;
    }

    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }
</style>
