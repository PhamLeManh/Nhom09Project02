@model MdpProject.Models.MdpLinhKien

@{
    ViewData["Title"] = "Chỉnh sửa Linh Kiện";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-primary fw-bold mb-3">
            <i class="bi bi-pencil-square"></i> @ViewData["Title"]
        </h2>
        <hr class="mb-4" />

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="MdpLinhKienId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="MdpSanPhamId" class="form-label">Danh mục sản phẩm</label>
                    <select asp-for="MdpSanPhamId" class="form-select" asp-items="ViewBag.MdpSanPhamId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="MdpSanPhamId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpTenLinhKien" class="form-label">Tên Linh Kiện</label>
                    <input asp-for="MdpTenLinhKien" class="form-control" placeholder="Nhập tên linh kiện..." />
                    <span asp-validation-for="MdpTenLinhKien" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpLoaiLinhKien" class="form-label">Loại Linh Kiện</label>
                    <input asp-for="MdpLoaiLinhKien" class="form-control" placeholder="Ví dụ: RAM, CPU..." />
                    <span asp-validation-for="MdpLoaiLinhKien" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpThongSoKyThuat" class="form-label">Thông số kỹ thuật</label>
                    <input asp-for="MdpThongSoKyThuat" class="form-control" placeholder="Ví dụ: 16GB, 3200MHz..." />
                    <span asp-validation-for="MdpThongSoKyThuat" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpAnh" class="form-label">Ảnh Linh Kiện (URL)</label>
                    <input asp-for="MdpAnh" class="form-control" placeholder="Nhập URL ảnh..." />
                    <span asp-validation-for="MdpAnh" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpCreatedAt" class="form-label">Ngày tạo</label>
                    <input asp-for="MdpCreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="MdpCreatedAt" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpUpdatedAt" class="form-label">Ngày cập nhật</label>
                    <input asp-for="MdpUpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="MdpUpdatedAt" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-primary px-4 flex-fill fw-semibold">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="MdpAdminIndex" class="btn btn-outline-secondary px-4 flex-fill fw-semibold">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .form-label {
        font-weight: 600;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .card {
        background: #fff;
        border-radius: 12px;
    }
</style>
