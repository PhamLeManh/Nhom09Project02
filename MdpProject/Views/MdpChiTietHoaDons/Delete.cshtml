@model MdpProject.Models.MdpChiTietHoaDon

@{
    ViewData["Title"] = "Xóa Chi Tiết Hóa Đơn";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<h2 class="text-danger mb-4"><i class="bi bi-trash"></i> Xóa Chi Tiết Hóa Đơn</h2>

<div class="alert alert-warning shadow-sm">
    <i class="bi bi-exclamation-triangle-fill"></i>
    Bạn có chắc chắn muốn xóa chi tiết hóa đơn này không?
</div>

<div class="card shadow-sm border-0 rounded-4 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.MdpSoLuong</dd>

            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@Model.MdpGia.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3">Giảm giá</dt>
            <dd class="col-sm-9">@((Model.MdpGiamGia ?? 0).ToString("N0")) VNĐ</dd>

            <dt class="col-sm-3">Thành tiền</dt>
            <dd class="col-sm-9 fw-bold text-danger">@((Model.MdpThanhTien ?? 0).ToString("N0")) VNĐ</dd>

            <dt class="col-sm-3">Mã Hóa Đơn</dt>
            <dd class="col-sm-9">#@Model.MdpHoaDon.MdpHoaDonId</dd>

            <dt class="col-sm-3">Mã Sản phẩm (Variant)</dt>
            <dd class="col-sm-9">#@Model.MdpVariant.MdpVariantId</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="MdpChiTietHdid" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Xác nhận xóa
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</form>
