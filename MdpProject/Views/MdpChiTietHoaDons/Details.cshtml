@model MdpProject.Models.MdpChiTietHoaDon

@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<h2 class="text-primary mb-4">
    <i class="bi bi-file-earmark-text"></i> Chi Tiết Hóa Đơn
</h2>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Số lượng</dt>
            <dd class="col-sm-9">@Model.MdpSoLuong</dd>

            <dt class="col-sm-3 fw-bold">Giá</dt>
            <dd class="col-sm-9">@Model.MdpGia.ToString("N0") VNĐ</dd>

            <dt class="col-sm-3 fw-bold">Giảm giá</dt>
            <dd class="col-sm-9">@((Model.MdpGiamGia ?? 0).ToString("N0")) VNĐ</dd>

            <dt class="col-sm-3 fw-bold">Thành tiền</dt>
            <dd class="col-sm-9 text-danger fw-bold">@((Model.MdpThanhTien ?? 0).ToString("N0")) VNĐ</dd>

            <dt class="col-sm-3 fw-bold">Mã Hóa Đơn</dt>
            <dd class="col-sm-9">
                <a asp-controller="MdpHoaDons" asp-action="Details" asp-route-id="@Model.MdpHoaDonId"
                   class="text-decoration-none">#@Model.MdpHoaDonId</a>
            </dd>

            <dt class="col-sm-3 fw-bold">Mã Sản phẩm (Variant)</dt>
            <dd class="col-sm-9">
                <a asp-controller="MdpProductVariants" asp-action="Details" asp-route-id="@Model.MdpVariantId"
                   class="text-decoration-none">#@Model.MdpVariantId</a>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MdpChiTietHdid" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
