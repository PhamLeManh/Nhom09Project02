@model IEnumerable<MdpProject.Models.MdpChiTietHoaDon>

@{
    ViewData["Title"] = "Chi tiết Hóa đơn";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container-fluid my-4">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-list-ul"></i> Danh sách Chi tiết Hóa đơn</h2>

    <table class="table table-bordered table-striped shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Giảm giá</th>
                <th>Thành tiền</th>
                <th>Hóa đơn</th>
                <th>Sản phẩm</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MdpSoLuong</td>
                        <td>@item.MdpGia.ToString("N0") VNĐ</td>
                        <td>@(item.MdpGiamGia.HasValue ? item.MdpGiamGia.Value.ToString("N0") + " VNĐ" : "-")</td>
                        <td class="fw-bold text-danger">
                            @((item.MdpThanhTien ?? 0).ToString("N0")) VNĐ
                        </td>
                        <td>
                            <a asp-controller="MdpHoaDons" asp-action="Details" asp-route-id="@item.MdpHoaDonId"
                               class="text-decoration-none">#@item.MdpHoaDonId</a>
                        </td>
                        <td>
                            <a asp-controller="MdpProductVariants" asp-action="Details" asp-route-id="@item.MdpVariantId"
                               class="text-decoration-none">#@item.MdpVariantId</a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.MdpChiTietHdid" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Xem
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MdpChiTietHdid" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">Không có chi tiết hóa đơn nào</td>
                </tr>
            }
        </tbody>
    </table>
</div>
