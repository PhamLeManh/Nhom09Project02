@model MdpProject.Models.MdpChiTietHoaDon

@{
    ViewData["Title"] = "Chỉnh sửa Chi Tiết Hóa Đơn";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<h2 class="mb-4 text-warning"><i class="bi bi-pencil-square"></i> Chỉnh sửa Chi Tiết Hóa Đơn</h2>

<div class="card shadow-sm border-0 rounded-4 p-4">
    <form asp-action="Edit">
        <input type="hidden" asp-for="MdpChiTietHdid" />

        <div class="mb-3">
            <label asp-for="MdpHoaDonId" class="form-label">Mã Hóa Đơn</label>
            <input asp-for="MdpHoaDonId" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="MdpVariantId" class="form-label">Mã Sản phẩm (Variant)</label>
            <input asp-for="MdpVariantId" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="MdpSoLuong" class="form-label"></label>
            <input asp-for="MdpSoLuong" class="form-control" type="number" />
            <span asp-validation-for="MdpSoLuong" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MdpGia" class="form-label"></label>
            <input asp-for="MdpGia" class="form-control" type="number" step="1000" />
            <span asp-validation-for="MdpGia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MdpGiamGia" class="form-label"></label>
            <input asp-for="MdpGiamGia" class="form-control" type="number" step="1000" />
            <span asp-validation-for="MdpGiamGia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MdpThanhTien" class="form-label"></label>
            <input asp-for="MdpThanhTien" class="form-control" type="number" step="1000" readonly />
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Lưu thay đổi
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
