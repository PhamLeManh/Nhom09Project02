@model MdpProject.Models.MdpPhone

@{
    ViewData["Title"] = "Xóa điện thoại";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-sm border-danger p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-danger fw-bold"><i class="bi bi-trash"></i> Xóa điện thoại</h2>
            <a asp-action="MdpAdminIndex" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <p class="text-muted mb-4">Bạn có chắc chắn muốn xóa điện thoại này không? Hành động này <strong>không thể hoàn tác</strong>.</p>

        <div class="row mb-4">
            <div class="col-md-4 text-center">
                <img src="@(!string.IsNullOrEmpty(Model.MdpAnh) ? Model.MdpAnh : "https://via.placeholder.com/150")"
                     class="img-fluid rounded shadow-sm" style="max-height:150px;" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Tên điện thoại:</dt>
                    <dd class="col-sm-8">@Model.MdpTenPhone</dd>

                    <dt class="col-sm-4">Màn hình:</dt>
                    <dd class="col-sm-8">@Model.MdpManHinh</dd>

                    <dt class="col-sm-4">Camera:</dt>
                    <dd class="col-sm-8">@Model.MdpCamera</dd>

                    <dt class="col-sm-4">Pin:</dt>
                    <dd class="col-sm-8">@Model.MdpPin</dd>

                    <dt class="col-sm-4">RAM:</dt>
                    <dd class="col-sm-8">@Model.MdpRam</dd>

                    <dt class="col-sm-4">Bộ nhớ:</dt>
                    <dd class="col-sm-8">@Model.MdpStorage</dd>

                    <dt class="col-sm-4">Chipset:</dt>
                    <dd class="col-sm-8">@Model.MdpChipset</dd>

                    <dt class="col-sm-4">Hệ điều hành:</dt>
                    <dd class="col-sm-8">@Model.MdpHeDieuHanh</dd>

                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.MdpCreatedAt?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Ngày cập nhật:</dt>
                    <dd class="col-sm-8">@Model.MdpUpdatedAt?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Danh mục:</dt>
                    <dd class="col-sm-8">@Model.MdpSanPham.MdpTenSanPham</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MdpPhoneId" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                    <i class="bi bi-trash"></i> Xóa ngay
                </button>
                <a asp-action="MdpAdminIndex" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="bi bi-arrow-left"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    dl dt {
        font-weight: 600;
    }

    dl dd {
        margin-bottom: 0.5rem;
    }
</style>
