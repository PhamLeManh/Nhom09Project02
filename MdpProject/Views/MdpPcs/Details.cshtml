@model MdpProject.Models.MdpPc

@{
    ViewData["Title"] = "Chi tiết PC";
}

<div class="container my-5">
    <div class="row">
        <!-- Cột ảnh sản phẩm -->
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <div class="product-image-wrapper">
                @if (!string.IsNullOrEmpty(Model.MdpAnh))
                {
                    <img src="@Url.Content(Model.MdpAnh)" alt="@Model.MdpTenPc"
                         class="img-fluid rounded shadow product-image" />
                }
                else
                {
                    <img src="~/images/no-image.png" alt="No image"
                         class="img-fluid rounded shadow product-image" />
                }
            </div>
        </div>

        <!-- Cột thông tin sản phẩm -->
        <div class="col-md-6">
            <h2 class="fw-bold mb-4">@Model.MdpTenPc</h2>

            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item"><strong>CPU:</strong> @Model.MdpCpu</li>
                <li class="list-group-item"><strong>GPU:</strong> @Model.MdpGpu</li>
                <li class="list-group-item"><strong>RAM:</strong> @Model.MdpRam</li>
                <li class="list-group-item"><strong>Storage:</strong> @Model.MdpStorage</li>
                <li class="list-group-item"><strong>Mainboard:</strong> @Model.MdpMainboard</li>
                <li class="list-group-item"><strong>PSU:</strong> @Model.MdpPsu</li>
                <li class="list-group-item"><strong>Case:</strong> @Model.MdpCaseType</li>
            </ul>

            <div class="d-flex gap-3">
                <a href="@Url.Action("Index", "MdpProductVariants", new { sanPhamId = Model.MdpSanPhamId })"
                   class="btn btn-success btn-lg w-100">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                </a>
                </a>
                <a asp-controller="MdpPcs" asp-action="Index"
                   class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Phần giới thiệu -->
    <div class="mt-5">
        <h3 class="fw-bold mb-3">Giới thiệu sản phẩm</h3>
        <p class="text-muted">
            Đây là dòng PC <strong>@Model.MdpTenPc</strong> được trang bị cấu hình mạnh mẽ,
            phù hợp cho nhu cầu chơi game, làm việc đồ họa, và sử dụng đa nhiệm mượt mà.
            Với thiết kế hiện đại và hiệu năng ổn định, sản phẩm mang lại trải nghiệm tối ưu
            cho người dùng.
        </p>
    </div>

    <!-- Thông số kỹ thuật -->
    <div class="mt-4">
        <h3 class="fw-bold mb-3">Thông số kỹ thuật</h3>
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th style="width: 200px;">CPU</th>
                    <td>@Model.MdpCpu</td>
                </tr>
                <tr>
                    <th>GPU</th>
                    <td>@Model.MdpGpu</td>
                </tr>
                <tr>
                    <th>RAM</th>
                    <td>@Model.MdpRam</td>
                </tr>
                <tr>
                    <th>Ổ cứng</th>
                    <td>@Model.MdpStorage</td>
                </tr>
                <tr>
                    <th>Mainboard</th>
                    <td>@Model.MdpMainboard</td>
                </tr>
                <tr>
                    <th>PSU</th>
                    <td>@Model.MdpPsu</td>
                </tr>
                <tr>
                    <th>Case</th>
                    <td>@Model.MdpCaseType</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    .product-image-wrapper {
        max-height: 500px;
        overflow: hidden;
    }

    .product-image {
        max-height: 480px;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }
</style>
