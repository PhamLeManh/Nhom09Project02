@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<h3 class="mb-4"><i class="bi bi-speedometer2"></i> Tổng Thống Kê Doanh Thu</h3>

<div class="row mb-4">
    <!-- Users -->
    <div class="col-md-3">
        <div class="card text-white bg-primary bg-gradient shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title">Users</h6>
                    <p class="display-6 fw-bold">12</p>
                </div>
                <i class="bi bi-people-fill display-5 opacity-50"></i>
            </div>
        </div>
    </div>
    <!-- Orders -->
    <div class="col-md-3">
        <div class="card text-white bg-success bg-gradient shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title">Orders</h6>
                    <p class="display-6 fw-bold">12</p>
                </div>
                <i class="bi bi-basket-fill display-5 opacity-50"></i>
            </div>
        </div>
    </div>
    <!-- Revenue -->
    <div class="col-md-3">
        <div class="card text-white bg-warning bg-gradient shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title">Revenue</h6>
                    <p class="display-6 fw-bold">$14,800</p>
                </div>
                <i class="bi bi-cash-stack display-5 opacity-50"></i>
            </div>
        </div>
    </div>
    <!-- Products -->
    <div class="col-md-3">
        <div class="card text-white bg-danger bg-gradient shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-title">Products</h6>
                    <p class="display-6 fw-bold">26</p>
                </div>
                <i class="bi bi-box-seam-fill display-5 opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<!-- Biểu đồ -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold"><i class="bi bi-graph-up"></i> Doanh Thu Theo Tháng</div>
            <div class="card-body">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold"><i class="bi bi-people"></i> Users Theo Role</div>
            <div class="card-body">
                <canvas id="usersChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ doanh thu
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Doanh Thu ($)',
                    data: [1200, 1500, 1800, 2200, 2000, 2500],
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.2)',
                    fill: true,
                    tension: 0.3,
                    borderWidth: 3,
                    pointBackgroundColor: '#0d6efd',
                    pointRadius: 5
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true, position: 'bottom' }
                }
            }
        });

        // Biểu đồ người dùng
        const usersCtx = document.getElementById('usersChart').getContext('2d');
        new Chart(usersCtx, {
            type: 'doughnut',
            data: {
                labels: ['Admin', 'Manager', 'Customer'],
                datasets: [{
                    label: 'Users',
                    data: [3, 1, 9],
                    backgroundColor: [
                        'rgba(220, 53, 69, 0.7)',
                        'rgba(13, 110, 253, 0.7)',
                        'rgba(255, 193, 7, 0.7)'
                    ],
                    borderColor: [
                        'rgba(220, 53, 69, 1)',
                        'rgba(13, 110, 253, 1)',
                        'rgba(255, 193, 7, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
            }
