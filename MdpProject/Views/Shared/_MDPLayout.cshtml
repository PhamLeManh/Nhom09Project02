@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = ViewData["Title"] ?? "MDP Tech";
    var username = Context.Session.GetString("username");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MDP Tech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Header */
        .navbar {
            background: #fff;
            transition: all 0.3s ease;
        }

        .navbar-brand img {
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.1);
            }

        .nav-link {
            font-weight: 500;
            color: #333 !important;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #0d6efd !important;
            }

        /* Dropdown danh mục */
        .dropdown-menu a {
            transition: all 0.3s ease;
            border-radius: 10px;
            padding: 10px 15px;
        }

            .dropdown-menu a:hover {
                color: #0d6efd !important;
                background: rgba(13, 110, 253, 0.05);
                transform: translateY(-3px);
                box-shadow: 0 3px 12px rgba(13, 110, 253, 0.2);
            }

        /* Search bar */
        .search-bar input {
            border-radius: 20px 0 0 20px;
        }

        .search-bar button {
            border-radius: 0 20px 20px 0;
        }

        /* Support box */
        .support-box {
            font-size: 0.9rem;
            color: #555;
        }

        /* Footer */
        footer {
            background: #212529;
            color: #ddd;
        }

            footer h5 {
                color: #fff;
                margin-bottom: 15px;
            }

            footer p, footer a {
                color: #ccc;
                font-size: 0.95rem;
            }

                footer a:hover {
                    color: #0d6efd;
                }

            footer .social-icons a {
                margin-right: 12px;
                font-size: 1.5rem;
                transition: transform 0.3s;
            }

                footer .social-icons a:hover {
                    transform: scale(1.2);
                    color: #0d6efd !important;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg shadow-sm sticky-top py-2">
        <div class="container-fluid px-4">
            <!-- Logo -->
            <a class="navbar-brand me-3" href="/">
                <img src="~/images/logo.png" alt="MDP Tech" style="height:60px;">
            </a>

            <!-- Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Left menu -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown position-static">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-grid"></i> Danh Mục
                        </a>
                        <div class="dropdown-menu w-100 shadow p-3 border-0">
                            <div class="d-flex justify-content-around flex-wrap text-center">
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpLaptops" asp-action="Index">
                                    <i class="bi bi-laptop fs-1 d-block mb-2"></i>Laptop
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpPhones" asp-action="Index">
                                    <i class="bi bi-phone fs-1 d-block mb-2"></i>Điện thoại
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpPCs" asp-action="Index">
                                    <i class="bi bi-pc-display fs-1 d-block mb-2"></i>PC
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpMonitors" asp-action="Index">
                                    <i class="bi bi-display fs-1 d-block mb-2"></i>Màn hình
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpLinhKiens" asp-action="Index">
                                    <i class="bi bi-headphones fs-1 d-block mb-2"></i>Linh kiện
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpMice" asp-action="Index">
                                    <i class="bi bi-mouse fs-1 d-block mb-2"></i>Chuột
                                </a>
                                <a class="text-decoration-none text-dark px-3" asp-controller="MdpCameras" asp-action="Index">
                                    <i class="bi bi-camera fs-1 d-block mb-2"></i>Máy ảnh
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>

                <!-- Search bar -->
                <form class="d-flex search-bar" onsubmit="return doSearch(event)">
                    <input id="searchInput" class="form-control me-2" type="text" placeholder="Tìm kiếm trên trang..." />
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                </form>
                <script>
                    function doSearch(e) {
                        e.preventDefault(); // Ngăn gửi form đi server
                        const keyword = document.getElementById("searchInput").value.trim();
                        if (!keyword) return false;

                        // Tìm trong toàn bộ body
                        const bodyText = document.body.innerText.toLowerCase();
                        const index = bodyText.indexOf(keyword.toLowerCase());

                        if (index !== -1) {
                            // Nếu có từ khóa thì cuộn tới vị trí
                            const range = window.find(keyword);
                            if (range) {
                                document.execCommand("hiliteColor", false, "yellow"); // Tô vàng
                            }
                        } else {
                            // Nếu không có thì chuyển hướng Google
                            window.location.href = "https://www.google.com/search?q=" + encodeURIComponent(keyword);
                        }

                        return false;
                    }
                </script>
                <!-- Right menu -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/MdpDonHangs/Index">
                            <i class="bi bi-bag-check-fill me-1"></i> Đơn Hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/MdpCarts/Index">
                            <i class="bi bi-cart-fill me-1"></i> Giỏ Hàng
                        </a>
                    </li>

                    @if (string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MdpUsers" asp-action="MdpLogin">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng Nhập
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="MdpUsers" asp-action="Index">
                                        <i class="bi bi-person-lines-fill me-1"></i> Hồ sơ
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="MdpUsers" asp-action="MdpLogout">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-1"></i> Đăng Xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>


                <!-- Hotline -->
                <div class="support-box d-none d-lg-block ms-3">
                    <div><i class="bi bi-telephone"></i> Hotline: <strong>0375526086</strong></div>
                    <div><i class="bi bi-chat-dots"></i> Hỗ trợ 24/7</div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main -->
    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>
                        <img src="~/images/logo.png" alt="MDP Tech" style="height:50px;">
                        MDP Technology
                    </h5>
                    <p>Chuyên cung cấp laptop, PC, điện thoại và phụ kiện công nghệ chính hãng.</p>
                    <p>Công ty bán chạy nhất Việt Nam cùng Nhà Sáng Lập CEO AyaTsuki.</p>
                    <p>Thành Viên Quản Trị: Phạm Lê Mạnh, Phạm Đình Phùng.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <p><i class="bi bi-envelope"></i> Support@mdptech.com</p>
                    <p><i class="bi bi-telephone"></i> 0375526086</p>
                    <p><i class="bi bi-geo-alt"></i> Số 60 Royal Hà Nội, Việt Nam</p>
                    <p><i class="bi bi-geo-alt"></i> Quận 10 Thành Phố Hồ Chí Minh</p>
                    <p><i class="bi bi-geo-alt"></i> Số 32 đường lớn Đà Lạt</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Follow</h5>
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                        <a href="#"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4 border-top border-secondary pt-3">
                &copy; 2025 MDP Technology Company. Founder by AyaTsuki
                <div>De Toun Durienne</div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
