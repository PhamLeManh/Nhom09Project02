@model MdpProject.Models.MdpSanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-pencil-square display-4 text-warning me-2"></i>
        <h2 class="fw-bold text-warning">✏️ Chỉnh sửa sản phẩm</h2>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                <input type="hidden" asp-for="MdpSanPhamId" />

                <div class="col-md-6">
                    <label asp-for="MdpTenSanPham" class="form-label fw-semibold"></label>
                    <input asp-for="MdpTenSanPham" class="form-control" />
                    <span asp-validation-for="MdpTenSanPham" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpMoTa" class="form-label fw-semibold"></label>
                    <input asp-for="MdpMoTa" class="form-control" />
                    <span asp-validation-for="MdpMoTa" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpCreatedAt" class="form-label fw-semibold"></label>
                    <input asp-for="MdpCreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="MdpCreatedAt" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpUpdatedAt" class="form-label fw-semibold"></label>
                    <input asp-for="MdpUpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="MdpUpdatedAt" class="text-danger"></span>
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Quay về danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .fw-semibold {
        font-weight: 600;
    }
</style>
