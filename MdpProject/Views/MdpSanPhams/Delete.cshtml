@model MdpProject.Models.MdpSanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-trash-fill display-4 text-danger me-2"></i>
        <h2 class="fw-bold text-danger">🗑️ Xóa sản phẩm</h2>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="text-warning">Bạn có chắc chắn muốn xóa sản phẩm này không?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3 fw-semibold">Tên sản phẩm:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MdpTenSanPham)</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MdpMoTa)</dd>

                <dt class="col-sm-3 fw-semibold">Ngày tạo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MdpCreatedAt)</dd>

                <dt class="col-sm-3 fw-semibold">Ngày cập nhật:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MdpUpdatedAt)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MdpSanPhamId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay về danh sách
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .fw-semibold {
        font-weight: 600;
    }
</style>
