@model MdpProject.Models.MdpSanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-card-list display-4 text-info me-2"></i>
        <h2 class="fw-bold text-info">🛒 Chi tiết sản phẩm</h2>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.MdpTenSanPham</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả</dt>
                <dd class="col-sm-9">@Model.MdpMoTa</dd>

                <dt class="col-sm-3 fw-semibold">Ảnh sản phẩm</dt>

                <dt class="col-sm-3 fw-semibold">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.MdpCreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold">Ngày cập nhật</dt>
                <dd class="col-sm-9">@Model.MdpUpdatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model.MdpSanPhamId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay về danh sách
        </a>
    </div>
</div>

<style>
    .fw-semibold {
        font-weight: 600;
    }

    .img-thumbnail {
        max-height: 150px;
        object-fit: cover;
    }
</style>
