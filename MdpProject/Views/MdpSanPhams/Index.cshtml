@model IEnumerable<MdpProject.Models.MdpSanPham>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <!-- Banner -->
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-bag-fill display-4 text-primary me-2"></i>
        <h2 class="fw-bold text-primary">🛒 Danh sách sản phẩm</h2>
    </div>

    <!-- Thêm sản phẩm -->
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Thêm mới sản phẩm
        </a>
    </div>

    <!-- Table sản phẩm -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Ngày tạo</th>
                    <th>Ngày cập nhật</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Chưa có sản phẩm nào.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.MdpTenSanPham</td>
                            <td>@item.MdpMoTa</td>
                            <td>@item.MdpCreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.MdpUpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.MdpSanPhamId" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square me-1"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MdpSanPhamId" class="btn btn-sm btn-info me-1 text-white">
                                    <i class="bi bi-eye me-1"></i> Xem
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MdpSanPhamId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                    <i class="bi bi-trash me-1"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn-sm {
        font-size: 0.85rem;
    }

    .fw-semibold {
        font-weight: 600;
    }
</style>
