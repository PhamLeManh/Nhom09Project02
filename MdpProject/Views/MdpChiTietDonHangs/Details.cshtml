@model MdpProject.Models.MdpChiTietDonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-card-list"></i> Chi tiết đơn hàng #@Model.MdpDonHangId</h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <dl class="row mb-3">
                <dt class="col-sm-3">Sản phẩm</dt>
                <dd class="col-sm-9">@Model.MdpVariant?.MdpSanPham?.MdpTenSanPham ?? "N/A"</dd>

                <dt class="col-sm-3">Màu</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.MdpVariant?.MdpMauSac?.MdpTenMau))
                    {
                        <span class="badge" style="background-color:@Model.MdpVariant.MdpMauSac.MdpMaHex; color:#fff;">
                            @Model.MdpVariant.MdpMauSac.MdpTenMau
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </dd>

                <dt class="col-sm-3">Dung lượng</dt>
                <dd class="col-sm-9">@Model.MdpVariant?.MdpDungLuong ?? "—"</dd>

                <dt class="col-sm-3">Số lượng</dt>
                <dd class="col-sm-9">@Model.MdpSoLuong</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9">@Model.MdpGia.ToString("N0")₫</dd>

                <dt class="col-sm-3">Giảm giá</dt>
                <dd class="col-sm-9">@Model.MdpGiamGia?.ToString("N0") + "₫"</dd>

                <dt class="col-sm-3">Thành tiền</dt>
                @{
                    var gia = Model.MdpGia;
                    var soLuong = Model.MdpSoLuong;
                    var thanhTien = Model.MdpThanhTien ?? (gia * soLuong);
                }
                <dd class="col-sm-9">@thanhTien.ToString("N0") + "₫"</dd>

                <dt class="col-sm-3">Ngày đặt</dt>
                <dd class="col-sm-9">@Model.MdpDonHang?.MdpNgayDatDonHang?.ToString("dd/MM/yyyy HH:mm") ?? "—"</dd>

                <dt class="col-sm-3">Thanh toán</dt>
                <dd class="col-sm-9">
                    @if (Model.MdpDonHang?.MdpTrangThaiThanhToan == "paid")
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Paid</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark"><i class="bi bi-x-circle"></i> Unpaid</span>
                    }
                </dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.MdpDonHang?.MdpStatus ?? "—"</span>
                </dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.MdpChiTietDonHangId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
