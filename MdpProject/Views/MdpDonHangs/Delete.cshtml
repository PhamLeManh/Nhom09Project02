@model MdpProject.Models.MdpDonHang

@{
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
    ViewData["Title"] = "Xóa Đơn Hàng";
}

<div class="container my-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-trash-fill me-2"></i>
            <h4 class="mb-0">Xóa Đơn Hàng - Mã @Model.MdpDonHangId</h4>
        </div>
        <div class="card-body">
            <p class="text-warning"><strong>Bạn có chắc muốn xóa đơn hàng này không?</strong></p>

            <dl class="row">
                <dt class="col-sm-3">Ngày Đặt</dt>
                <dd class="col-sm-9">@Model.MdpNgayDatDonHang?.ToString("dd/MM/yyyy HH:mm") ?? "Không có"</dd>

                <dt class="col-sm-3">Ngày Giao</dt>
                <dd class="col-sm-9">@Model.MdpNgayGiaoHang?.ToString("dd/MM/yyyy") ?? "Chưa có"</dd>

                <dt class="col-sm-3">Địa Chỉ Giao Hàng</dt>
                <dd class="col-sm-9">@Model.MdpDiaChiGiaoHang ?? "Không có"</dd>

                <dt class="col-sm-3">Phương Thức Thanh Toán</dt>
                <dd class="col-sm-9">@Model.MdpPhuongThucThanhToan ?? "Không có"</dd>

                <dt class="col-sm-3">Trạng Thái Thanh Toán</dt>
                <dd class="col-sm-9">@Model.MdpTrangThaiThanhToan ?? "Chưa thanh toán"</dd>

                <dt class="col-sm-3">Trạng Thái Đơn</dt>
                <dd class="col-sm-9">@Model.MdpStatus ?? "Không có"</dd>

                <dt class="col-sm-3">Tổng Tiền</dt>
                <dd class="col-sm-9">@Model.MdpTongTien.ToString("N0") + "₫"</dd>

                <dt class="col-sm-3">Khách Hàng</dt>
                <dd class="col-sm-9">@Model.MdpKhachHang?.MdpHoTen ?? "Không có"</dd>

                <dt class="col-sm-3">Khuyến Mãi</dt>
                <dd class="col-sm-9">@Model.MdpKm?.MdpMaCode ?? "Không có"</dd>
            </dl>

            <div class="mt-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="MdpDonHangId" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash-fill me-1"></i> Xóa
                    </button>
                    <a asp-action="MdpAdminIndex" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay Lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .card-header {
        font-size: 1.2rem;
        border-radius: 12px 12px 0 0;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    .btn i {
        vertical-align: middle;
    }
</style>
