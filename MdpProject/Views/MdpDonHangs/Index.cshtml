@model IEnumerable<MdpProject.Models.MdpDonHang>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<h2 class="mb-4 text-primary"><i class="bi bi-basket3-fill me-2"></i>Đơn hàng của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5 shadow-sm rounded-4">
        <i class="bi bi-info-circle-fill me-2 fs-3"></i>
        <div class="fs-5">Bạn chưa có đơn hàng nào.</div>
        <small class="text-muted">Hãy mua sắm ngay để tạo đơn hàng đầu tiên!</small>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-lg border-0 rounded-4 h-100 hover-shadow transition">
                    <div class="card-header d-flex justify-content-between align-items-center bg-gradient bg-primary text-white rounded-top-4">
                        <span class="fw-bold">#@item.MdpDonHangId</span>
                        <small>@item.MdpNgayDatDonHang?.ToString("dd/MM/yyyy")</small>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="mb-3">
                            <p class="mb-2">
                                Trạng thái:
                                @if (!string.IsNullOrEmpty(item.MdpTrangThaiThanhToan)
                               && item.MdpTrangThaiThanhToan.ToLower() == "true")
                                {
                                    <span class="badge bg-success text-white px-3 py-2 rounded-pill">
                                        <i class="bi bi-check-circle-fill me-1"></i>Đã thanh toán
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>Chưa thanh toán
                                    </span>
                                }
                            </p>
                            <p class="mb-0 fw-semibold text-primary fs-5">
                                Tổng tiền: @item.MdpTongTien.ToString("N0") ₫
                            </p>
                        </div>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                       
                            <span class="text-muted small">
                                <i class="bi bi-clock me-1"></i> @item.MdpNgayDatDonHang?.ToString("HH:mm dd/MM")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    /* Hover effect pro cho card */
    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    }
    .bg-gradient {
        background: linear-gradient(135deg, #4e73df 0%, #1cc88a 100%);
    }
</style>
