@model MdpProject.Models.MdpHoaDon

@{
    ViewData["Title"] = "Xóa Hóa Đơn";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger fw-bold"><i class="bi bi-trash-fill"></i> Xóa Hóa Đơn</h2>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="alert alert-warning shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Bạn có chắc chắn muốn xóa hóa đơn này? Hành động này <b>không thể hoàn tác</b>.
    </div>

    <div class="card shadow-sm p-4 mb-4">
        <dl class="row mb-0">
            <dt class="col-md-3 fw-bold">Ngày xuất:</dt>
            <dd class="col-md-9">@Model.MdpNgayXuat?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-md-3 fw-bold">Tổng tiền:</dt>
            <dd class="col-md-9">@Model.MdpTongTien.ToString("N0") VNĐ</dd>

            <dt class="col-md-3 fw-bold">Phương thức thanh toán:</dt>
            <dd class="col-md-9">@Model.MdpPhuongThucThanhToan</dd>

            <dt class="col-md-3 fw-bold">Trạng thái:</dt>
            <dd class="col-md-9">@Model.MdpTrangThai</dd>

            <dt class="col-md-3 fw-bold">Đơn hàng liên quan:</dt>
            <dd class="col-md-9">
                <a asp-controller="MdpDonHangs" asp-action="Details" asp-route-id="@Model.MdpDonHangId" class="text-decoration-none">
                    #@Model.MdpDonHangId
                </a>
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="MdpHoaDonId" />
        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
            <i class="bi bi-trash"></i> Xóa ngay
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
            <i class="bi bi-x-circle"></i> Hủy
        </a>
    </form>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    dt {
        font-weight: 600;
    }

    dd {
        margin-bottom: 12px;
    }
</style>
