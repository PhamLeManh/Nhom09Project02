@model MdpProject.Models.MdpKhuyenMai

@{
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
    ViewData["Title"] = "Thêm khuyến mãi";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            🎁 Thêm khuyến mãi mới
        </h2>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="MdpMaCode" class="form-label fw-bold">Mã Code</label>
                    <input asp-for="MdpMaCode" class="form-control" placeholder="Nhập mã code (VD: SALE50)" />
                    <span asp-validation-for="MdpMaCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MdpMoTa" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="MdpMoTa" class="form-control" rows="3" placeholder="Nhập mô tả khuyến mãi..."></textarea>
                    <span asp-validation-for="MdpMoTa" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MdpGiaTri" class="form-label fw-bold">Giá trị (VNĐ)</label>
                        <input asp-for="MdpGiaTri" class="form-control" type="number" placeholder="Nhập số tiền giảm" />
                        <span asp-validation-for="MdpGiaTri" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="MdpPhanTram" class="form-label fw-bold">Phần trăm (%)</label>
                        <input asp-for="MdpPhanTram" class="form-control" type="number" placeholder="Nhập % giảm giá" />
                        <span asp-validation-for="MdpPhanTram" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MdpNgayBatDau" class="form-label fw-bold">Ngày bắt đầu</label>
                        <input asp-for="MdpNgayBatDau" class="form-control" type="date" />
                        <span asp-validation-for="MdpNgayBatDau" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="MdpNgayKetThuc" class="form-label fw-bold">Ngày kết thúc</label>
                        <input asp-for="MdpNgayKetThuc" class="form-control" type="date" />
                        <span asp-validation-for="MdpNgayKetThuc" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2 shadow-sm">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 12px;
    }

    .form-label {
        font-size: 0.95rem;
    }

    .btn {
        border-radius: 8px;
        transition: all 0.2s;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>
