@model MdpProject.Models.MdpKhuyenMai

@{
    ViewData["Title"] = "Xóa khuyến mãi";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-trash"></i> Xóa khuyến mãi</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body p-4">
            <h5 class="text-danger mb-4">⚠️ Bạn có chắc chắn muốn xóa khuyến mãi này?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold text-muted">Mã Code</dt>
                <dd class="col-sm-9">@Model.MdpMaCode</dd>

                <dt class="col-sm-3 fw-bold text-muted">Mô tả</dt>
                <dd class="col-sm-9">@Model.MdpMoTa</dd>

                <dt class="col-sm-3 fw-bold text-muted">Ngày bắt đầu</dt>
                <dd class="col-sm-9">@Model.MdpNgayBatDau?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Ngày kết thúc</dt>
                <dd class="col-sm-9">@Model.MdpNgayKetThuc?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.MdpTrangThai == "1" || Model.MdpTrangThai == "Hoạt động")
                    {
                        <span class="badge bg-success px-3 py-2">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Ngừng</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="MdpKmid" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-check-circle"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>
