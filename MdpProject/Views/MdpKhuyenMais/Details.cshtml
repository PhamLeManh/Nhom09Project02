@model MdpProject.Models.MdpKhuyenMai

@{
    ViewData["Title"] = "Chi tiết khuyến mãi";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-ticket-perforated"></i> Chi tiết khuyến mãi</h3>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.MdpKmid" class="btn btn-light btn-sm">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-muted">Mã khuyến mãi</dt>
                <dd class="col-sm-9">@Model.MdpMaCode</dd>

                <dt class="col-sm-3 fw-bold text-muted">Mô tả</dt>
                <dd class="col-sm-9">@Model.MdpMoTa</dd>

                <dt class="col-sm-3 fw-bold text-muted">Giá trị</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark px-3 py-2">
                        @Model.MdpGiaTri
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">Phần trăm</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark px-3 py-2">
                        @Model.MdpPhanTram %
                    </span>
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">Ngày bắt đầu</dt>
                <dd class="col-sm-9">
                    @(Model.MdpNgayBatDau?.ToString("dd/MM/yyyy"))
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">Ngày kết thúc</dt>
                <dd class="col-sm-9">
                    @(Model.MdpNgayKetThuc?.ToString("dd/MM/yyyy"))
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.MdpTrangThai == "1" || Model.MdpTrangThai == "Hoạt động")
                    {
                        <span class="badge bg-success px-3 py-2">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Ngừng</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>
