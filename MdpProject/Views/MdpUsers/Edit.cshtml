@model MdpProject.Models.MdpUser

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">✏️ Chỉnh sửa người dùng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="MdpUserId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MdpTenDangNhap" class="form-label fw-semibold"></label>
                        <input asp-for="MdpTenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                        <span asp-validation-for="MdpTenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpMatKhau" class="form-label fw-semibold"></label>
                        <input asp-for="MdpMatKhau" type="password" class="form-control" placeholder="Mật khẩu" />
                        <span asp-validation-for="MdpMatKhau" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpEmail" class="form-label fw-semibold"></label>
                        <input asp-for="MdpEmail" type="email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="MdpEmail" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpHoTen" class="form-label fw-semibold"></label>
                        <input asp-for="MdpHoTen" class="form-control" placeholder="Họ tên" />
                        <span asp-validation-for="MdpHoTen" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpSoDienThoai" class="form-label fw-semibold"></label>
                        <input asp-for="MdpSoDienThoai" class="form-control" placeholder="Số điện thoại" />
                        <span asp-validation-for="MdpSoDienThoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpDiaChi" class="form-label fw-semibold"></label>
                        <input asp-for="MdpDiaChi" class="form-control" placeholder="Địa chỉ" />
                        <span asp-validation-for="MdpDiaChi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpRole" class="form-label fw-semibold"></label>
                        <select asp-for="MdpRole" class="form-select">
                            <option value="">-- Chọn vai trò --</option>
                            <option value="User" selected="@Model.MdpRole == " User"">User</option>
                            <option value="Manager" selected="@Model.MdpRole == " Manager"">Manager</option>
                            <option value="Admin" selected="@Model.MdpRole == " Admin"">Admin</option>
                        </select>
                        <span asp-validation-for="MdpRole" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpNgaySinh" class="form-label fw-semibold"></label>
                        <input asp-for="MdpNgaySinh" type="date" class="form-control" />
                        <span asp-validation-for="MdpNgaySinh" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MdpGioiTinh" class="form-label fw-semibold"></label>
                        <select asp-for="MdpGioiTinh" class="form-select">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam" selected="@Model.MdpGioiTinh == " Nam"">Nam</option>
                            <option value="Nữ" selected="@Model.MdpGioiTinh == " Nữ"">Nữ</option>
                            <option value="Khác" selected="@Model.MdpGioiTinh == " Khác"">Khác</option>
                        </select>
                        <span asp-validation-for="MdpGioiTinh" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="MdpAvatar" class="form-label fw-semibold"></label>
                        <input asp-for="MdpAvatar" class="form-control" placeholder="URL ảnh đại diện" />
                        <span asp-validation-for="MdpAvatar" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="MdpAdminIndex" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
