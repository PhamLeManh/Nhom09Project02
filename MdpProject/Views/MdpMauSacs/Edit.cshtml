@model MdpProject.Models.MdpMauSac

@{
    ViewData["Title"] = "Chỉnh sửa Màu Sắc";
    Layout = "~/Views/Shared/_MdpAdminLayout.cshtml";
}

<div class="container my-4">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h2 class="text-primary fw-bold mb-3">
            <i class="bi bi-pencil-square"></i> @ViewData["Title"]
        </h2>
        <hr class="mb-4" />

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-warning">@TempData["Error"]</div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="MdpMauSacId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="MdpTenMau" class="form-label">Tên Màu</label>
                    <input asp-for="MdpTenMau" class="form-control" placeholder="Nhập tên màu..." />
                    <span asp-validation-for="MdpTenMau" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MdpMaHex" class="form-label">Mã Hex</label>
                    <input asp-for="MdpMaHex" class="form-control" placeholder="#FFFFFF" />
                    <span asp-validation-for="MdpMaHex" class="text-danger small"></span>
                    <div class="mt-2" style="width:40px;height:40px;border:1px solid #ccc;border-radius:5px;background:@Model.MdpMaHex;"></div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-primary px-4 flex-fill fw-semibold">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 flex-fill fw-semibold">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }
</style>
